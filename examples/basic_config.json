    "refresh_interval_seconds": 60,
    "agent_id": null,
    "agent_tags": []
  },
  "api": {
    "enabled": false,
    "bind": "127.0.0.1:4830"
  },
  "chitin": {
    "lib_path": null,
    "sidecar_url": null
  }
}
